<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox styleClass="ContentView" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.111" fx:controller="com.jdc.ishop.controller.ItemList">
   <stylesheets>
      <URL value="@color.css" />
      <URL value="@layout.css" />
   </stylesheets>
   <children>
      <HBox>
         <children>
            <ComboBox fx:id="schCategory" prefHeight="27.0" prefWidth="183.0" promptText="Category" />
            <TextField fx:id="priceFrom" prefHeight="27.0" prefWidth="180.0" promptText="Price From" />
            <TextField fx:id="priceTo" layoutX="193.0" layoutY="10.0" prefHeight="27.0" prefWidth="168.0" promptText="Price To" />
            <TextField fx:id="schName" layoutX="400.0" layoutY="10.0" prefHeight="27.0" prefWidth="163.0" promptText="Name" />
            <Button mnemonicParsing="false" onAction="#clear" text="CLEAR" />
            <Button mnemonicParsing="false" onAction="#addNew" text="ADD NEW" />
         </children>
         <styleClass>
            <String fx:value="Padding10" />
            <String fx:value="Space10" />
         </styleClass>
      </HBox>
      <VBox styleClass="Padding10" VBox.vgrow="ALWAYS">
         <children>
            <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn prefWidth="75.0" text="ID" />
                <TableColumn prefWidth="179.0" text="Category" />
                  <TableColumn prefWidth="172.0" text="Item Name" />
                  <TableColumn prefWidth="128.0" text="Price" />
                  <TableColumn prefWidth="85.0" text="Status" />
                  <TableColumn prefWidth="112.0" text="Creation" />
                  <TableColumn prefWidth="126.0" text="Create User" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </children>
</VBox>
