<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="loginForm" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jdc.hotel.application.view.ChangePassword">
   <stylesheets>
      <URL value="@color.css" />
      <URL value="@layout.css" />
   </stylesheets>
   <children>
      <HBox>
         <children>
            <Label styleClass="text1" text="Change Password" />
         </children>
         <styleClass>
            <String fx:value="loginTitleView" />
            <String fx:value="back4" />
         </styleClass>
      </HBox>
      <VBox styleClass="form" VBox.vgrow="ALWAYS">
         <children>
            <Label />
            <VBox styleClass="formGroup">
               <children>
                  <Label text="Old Password" />
                  <PasswordField fx:id="oldPassword" />
               </children>
            </VBox>
            <VBox layoutX="70.0" layoutY="87.0" styleClass="formGroup">
               <children>
                  <Label text="New Password" />
                  <PasswordField fx:id="newPassword" />
               </children>
            </VBox>
            <HBox styleClass="formGroup">
               <children>
                  <Button mnemonicParsing="false" onAction="#close" text="Close">
                     <styleClass>
                        <String fx:value="back3" />
                        <String fx:value="text1" />
                     </styleClass>
                  </Button>
                  <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#save" text="Save">
                     <styleClass>
                        <String fx:value="back3" />
                        <String fx:value="text1" />
                     </styleClass>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
