<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jdc.ishop.controller.Login">
   <stylesheets>
      <URL value="@color.css" />
      <URL value="@layout.css" />
   </stylesheets>
   <children>
      <HBox>
         <children>
            <Label styleClass="text4" text="iShop Login" />
         </children>
         <styleClass>
            <String fx:value="LoginTitlePane" />
            <String fx:value="back1" />
         </styleClass>
         <effect>
            <DropShadow />
         </effect>
      </HBox>
      <VBox>
         <children>
            <Label fx:id="message" />
            <VBox styleClass="AlignCenter">
               <children>
                  <TextField fx:id="loginID" promptText="Login ID">
                     <styleClass>
                        <String fx:value="back2" />
                        <String fx:value="text4" />
                     </styleClass></TextField>
               </children>
            </VBox>
            <VBox styleClass="AlignCenter">
               <children>
                  <PasswordField fx:id="password" promptText="Password">
                     <styleClass>
                        <String fx:value="back2" />
                        <String fx:value="text4" />
                     </styleClass></PasswordField>
               </children>
            </VBox>
            <HBox>
               <children>
                  <Button mnemonicParsing="false" onAction="#close" text="CLOSE">
                     <styleClass>
                        <String fx:value="back1" />
                        <String fx:value="text4" />
                     </styleClass>
                     <effect>
                        <DropShadow />
                     </effect></Button>
                  <Button mnemonicParsing="false" onAction="#login" text="LOGIN">
                     <styleClass>
                        <String fx:value="back1" />
                        <String fx:value="text4" />
                     </styleClass>
                     <effect>
                        <DropShadow />
                     </effect></Button>
               </children>
               <styleClass>
                  <String fx:value="AlignCenter" />
                  <String fx:value="Space10" />
               </styleClass>
            </HBox>
         </children>
         <styleClass>
            <String fx:value="loginForm" />
            <String fx:value="AlignCenter" />
         </styleClass>
      </VBox>
   </children>
   <styleClass>
      <String fx:value="LoginView" />
      <String fx:value="back1" />
   </styleClass>
</VBox>
