<?import javafx.scene.layout.VBox?>

<VBox stylesheets="@application.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jdc.student.controller.AddClass">
	<styleClass>
		<String fx:value="ContentPane" />
		<String fx:value="Padding20" />
	</styleClass>
	<children>
		<GridPane hgap="20.0">
			<columnConstraints>
				<ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="282.0" minWidth="10.0" prefWidth="148.0" />
				<ColumnConstraints hgrow="SOMETIMES" maxWidth="511.0" minWidth="10.0" prefWidth="511.0" />
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
				<RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
				<RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
				<RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
				<RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
				<RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
				<RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Label text="Course" GridPane.rowIndex="1" />
				<Label text="Start Date" GridPane.rowIndex="2" />
				<Label text="Duration" GridPane.rowIndex="5" />
				<Label text="Description" GridPane.rowIndex="6" />
				<Slider fx:id="duration" blockIncrement="0.5" majorTickUnit="1.0" max="10.0" minorTickCount="1" showTickLabels="true" showTickMarks="true" snapToTicks="true" GridPane.columnIndex="1" GridPane.rowIndex="5" />
				<TextArea fx:id="remark" prefHeight="200.0" prefWidth="200.0" promptText="Descriptions" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="6" GridPane.rowSpan="3" />
				<HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="9">
					<children>
						<Button mnemonicParsing="false" onAction="#clear" text="CLEAR" />
						<Button mnemonicParsing="false" onAction="#save" text="SAVE" />
					</children>
				</HBox>
            <Label text="Days" GridPane.rowIndex="3" />
            <Label text="Times" GridPane.rowIndex="4" />
            <ComboBox fx:id="courseCombo" prefHeight="27.0" prefWidth="247.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <DatePicker fx:id="startDate" promptText="Start Date" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <HBox fx:id="daysBox" alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
               <children>
                  <TextField fx:id="startTime" promptText="Time From" />
                  <Label text="-" />
                  <TextField fx:id="endTime" layoutX="10.0" layoutY="17.0" promptText="Time To" />
               </children>
            </HBox>
			</children>
		</GridPane>
	</children>
</VBox>
